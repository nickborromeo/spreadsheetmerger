%h1 Sign In

%section
  =form_tag sessions_path do
    %div
      = label_tag :email
      %br
      = text_field_tag :email
      
    %div
      = label_tag :password
      %br
      = password_field_tag :password
      
    %p 
      = link_to "Forgot Password?", new_password_reset_path
    
    %div
      = check_box_tag :remember_me, 1, params[:remember_me]
      = label_tag :remember_me
      
    %div 
      = submit_tag "Sign In"